<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="blue_button" parent="@style/Widget.AppCompat.Button">
        <item name="background">@drawable/btn_blue</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="dark_button" parent="@style/Widget.AppCompat.Button">
        <item name="background">@drawable/btn_dark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="fade_dialog">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    
    <style name="application_theme" parent="@style/Theme.AppCompat.Light" />
</resources>